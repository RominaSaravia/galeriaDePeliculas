<h2>Detalles</h2>
<hr>

<section class="show-detail">
  <article class="movie-cover">
    <img src="{{movieFound.cover}}" alt="{{movieFound.title}}">
  </article>
  <article class="movie-detail">
    <h3>{{movieFound.title}} ({{movieFound.year}})</h3>
    <p>Director: {{movieFound.director}}</p>

    <p>Reparto:</p>
    <ul class="topCast">

      {{#each movieFound.topCast}}
      <li>{{this}}</li>
      {{/each}}

    </ul>

    <a href="{{movieFound.IMDB}}" target="_blank">IMDB</a>
  </article>
</section>